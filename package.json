		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@lucide/svelte": "^0.553.0",
		"@types/marked": "^5.0.2",
		"gray-matter": "^4.0.3",
		"marked": "^17.0.0"
	}
